# Production Environment Configuration for Render
# This file is for reference only - actual values will be set in Render dashboard

APP_NAME=Symatech
APP_ENV=production
APP_DEBUG=false
APP_URL=https://symatech-backend.onrender.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (automatically set by Render)
DB_CONNECTION=pgsql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration (Render Redis service)
REDIS_HOST=symatech-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (update as needed)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@symatech-backend.onrender.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Authentication
AUTH_SECRET_KEY=${AUTH_SECRET_KEY}
AUTH_TOKEN_TTL=1440
AUTH_REFRESH_TTL=10080
AUTH_ALGORITHM=HS256

# Payment Configuration (update as needed)
PAYMENT_PROVIDER_SECRET_KEY=
PAYMENT_PROVIDER_PUBLIC_KEY=
PAYMENT_PROVIDER_ENVIRONMENT=production
PAYMENT_PROVIDER_CALLBACK_URL=https://symatech-backend.onrender.com/api/callbacks/payment
